<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>frege</groupId>
  <artifactId>frege-maven-quickstart</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  
  <build>
  <plugins>
  <plugin>
  		<!--  frege requires java 1.7  -->
       <artifactId>maven-compiler-plugin</artifactId>
       <version>2.3.2</version>
       <configuration>
           <source>1.7</source>
           <target>1.7</target>
           <encoding>UTF-8</encoding>
       </configuration>
   </plugin>
  <plugin>
	  <groupId>frege</groupId>
	  <artifactId>maven-compiler-plugin</artifactId>
	  <version>0.0.1-SNAPSHOT</version>
	   <configuration>
	   		<mainModule>Main.fr</mainModule>
	   		<prefix>A</prefix>
  	   </configuration>
   		<executions>
         <execution>
           <phase>generate-sources</phase> <!--  maven build phase where the plugin should execute -->
           <goals>
             <goal>compileFrege</goal> <!-- goal must be equivalent to a @goal comment in one of the Plugin's Mojos -->
           </goals>
         </execution>
       </executions>
	</plugin>
  
  </plugins>
  
  <!--  m2e related idiocy, please ignore  -->
  <pluginManagement>
  	<plugins>
  		<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
  		<plugin>
  			<groupId>org.eclipse.m2e</groupId>
  			<artifactId>lifecycle-mapping</artifactId>
  			<version>1.0.0</version>
  			<configuration>
  				<lifecycleMappingMetadata>
  					<pluginExecutions>
  						<pluginExecution>
  							<pluginExecutionFilter>
  								<groupId>frege</groupId>
  								<artifactId>
  									maven-compiler-plugin
  								</artifactId>
  								<versionRange>
  									[0.0.1-SNAPSHOT,)
  								</versionRange>
  								<goals>
  									<goal>compileFrege</goal>
  								</goals>
  							</pluginExecutionFilter>
  							<action>
  								<ignore></ignore>
  							</action>
  						</pluginExecution>
  					</pluginExecutions>
  				</lifecycleMappingMetadata>
  			</configuration>
  		</plugin>
  	</plugins>
  </pluginManagement>
   <!-- End:  m2e related idiocy, please ignore  -->
  </build>
</project>