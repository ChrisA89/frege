private list :: Foldable f => ([a] -> [b]) -> f a -> NonEmpty b
private list = ((unsafeToNonEmpty •) • (• toList))

private list2 :: Foldable f => ([a] -> [b] -> [c]) -> f a -> f b -> NonEmpty c
private list2 f a b = unsafeToNonEmpty $ f (toList a) (toList b)
