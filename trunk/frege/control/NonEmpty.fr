instance Show Show a => NonEmpty a where
  show (NonEmpty h t) = Show.show (h:t)
--  show (NonEmpty h t) = '|' : Show.show (h:t) ++ "|"

instance Semigroup NonEmpty a where
  mappend (NonEmpty a b) (NonEmpty c d) = NonEmpty a (b ++ [c] ++ d)

